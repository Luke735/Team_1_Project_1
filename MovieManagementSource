#include <iostream>
#include <fstream>
#include <iomanip>
#include <string>
#include <list>
#include <iterator>

using namespace std;

int main() {
    ifstream fin("movies.txt");

    if (!fin.is_open()) {
        cout << "Could not open file" << endl;
    }
    else {
        ofstream fout;
        fout.open("results_1.txt");

        string name, date, line;
        list<string> showingList, comingList;
        int count = 0, breaker = 0;
        while (getline(fin, line)) {
            for (count; count < line.size(); count++) {
                char current;
                current = line.at(count);
                if (breaker == 0) {
                    name.push_back(current);
                    
                }
                if (breaker == 1) {
                    date.push_back(current);
                }
                if (current == '"' && count != 0) {
                    breaker++;
                }
                if (breaker == 1 && current != ' ') {
                    date.push_back(current);
                }
            }
            showingList.push_back(line);
        }     

        list<string>::iterator it;
        for (it = showingList.begin(); it != showingList.end(); ++it) {
            fout << *it << endl;
        }

        string option = "e";
		//the menu is in a while loop until the option selected is q
		//the menu only reads the first character of the input as the option
		while (option.at(0) != 'q') {
            cout << "MENU" << endl;
			cout << "a - Display movies" << endl;
			cout << "b - Add movies" << endl;
			cout << "c - Edit release dates" << endl;
            cout << "d - Edit movie description" << endl;
            cout << "e - Start showing movies in the theatre" << endl;
            cout << "f - Number of movies before a date" << endl;
            cout << "s - Save" << endl;
			cout << "q - Quit" << endl;
            cout << endl;
			cout << "Choose an option: " << endl;
            cin >> option;

			//explain option here
			if (option.at(0) == 'a') {
				
			}
            //explain option here
			if (option.at(0) == 'b') {
				
			}
			//explain option here
            if (option.at(0) == 'c') {

            }
            //explain option here
            if (option.at(0) == 'd') {

            }
            //explain option here
            if (option.at(0) == 'e') {

            }
            //explain option here
            if (option.at(0) == 'f') {

            }
            //explain option here
            if (option.at(0) == 's') {

            }
		}//end while loop




        fin.close();
        fout.close();
    }
    return 0;
}
